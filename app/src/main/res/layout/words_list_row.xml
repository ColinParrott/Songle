<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/ConstraintLayoutList"
    android:layout_marginBottom="5dp"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imgImportance"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_marginRight="45dp"
        android:background="@mipmap/marker_unclassified"
        android:elevation="12dp"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtRowLyric"
        android:layout_marginEnd="45dp"/>

    <TextView
        android:id="@+id/txtRowLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:text="@string/txt_WordLocationPlaceholder"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="6dp"/>

    <TextView
        android:id="@+id/txtRowLyric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="8dp"
        android:text="@string/txt_LyricPlaceholder"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/txtRowLoc"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="51dp"/>

</android.support.constraint.ConstraintLayout>
