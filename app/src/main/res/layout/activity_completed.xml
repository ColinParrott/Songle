<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/txt_SongList"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="20dp"
        android:elevation="2dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progBarCompleted"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="@color/colorAccent"
        android:indeterminateTint="@color/colorAccent"
        android:progressTint="@color/colorAccent"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txtViewCompleted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/txt_CompletedPlaceholder"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <Switch
        android:id="@+id/switchSort"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_SortByCompleted"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:theme="@style/SongleSwitch"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/colorAccent"
        app:srcCompat="?android:attr/dividerHorizontal" />

    <ListView
        android:id="@+id/lstCompleted"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:footerDividersEnabled="false"
        android:divider="@color/colorPrimaryTransparent"
        android:dividerHeight="2dp"
        android:headerDividersEnabled="false"
        android:scrollbars="vertical">

    </ListView>

</LinearLayout>