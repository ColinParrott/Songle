<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:id="@+id/LinearLayout"
                  android:layout_marginBottom="5dp"
                  android:layout_height="match_parent"
                  android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRowLoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/txt_WordLocationPlaceholder"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtRowLyric"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/txt_LyricPlaceholder"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/imgImportance"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="@mipmap/marker_unclassified"
        android:scaleType="centerInside"/>
</LinearLayout>
