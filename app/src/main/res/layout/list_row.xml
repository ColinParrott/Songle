<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:id="@+id/ConstraintLayoutList"
                                                 android:layout_marginBottom="5dp"
        android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imgCompletedPlay"
        android:layout_width="46dp"
        android:layout_height="41dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="8dp"
        android:elevation="12dp"
        android:src="@android:drawable/ic_media_play"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtRowTitle"
        />

    <TextView
        android:id="@+id/txtRowNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/txt_NumberPlaceholder"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtRowTitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="8dp"
        android:text="@string/txt_TitlePlaceholder"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/txtRowNum"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtRowArtist"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/txt_ArtistPlaceholder"
        android:autoSizeTextType="uniform"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/txtRowTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtRowTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.036"/>

</android.support.constraint.ConstraintLayout>
